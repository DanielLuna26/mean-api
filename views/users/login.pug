div.row
  div.col-md-offset-3.col-md-6
    div.jumbotron
      h1 Login
      form(ng-submit="login.doLogin()")
        div.form-group
          span Email
          input(type="email" ng-model="login.loginData.email").form-control
        div.form-group
          span Password
          input(type="password" ng-model="login.loginData.password").form-control
        div.form-group  
          div.pull-right
            button(type="submit").btn.btn-danger Submit


